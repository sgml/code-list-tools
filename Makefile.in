prefix = @prefix@
PACKAGE_NAME = @PACKAGE_NAME@
PACKAGE_VERSION = @PACKAGE_VERSION@

MKDIR_P = @MKDIR_P@
INSTALL = @INSTALL@
SED = @SED@
AWK = @AWK@

m4 = @m4@

dist_name = $(PACKAGE_NAME)-$(PACKAGE_VERSION)
share_dir_rel = share/${PACKAGE_NAME}
build_dir = tmp/build
all_dir = tmp/all

src_files := $(shell find src -type f ! -name '*~' ! -name '\#*' -print)

step_files := ${src_files:src/%=${build_dir}/%}
step_files := ${step_files:%.m4=%}
step_files := ${step_files:${build_dir}/share/%=${build_dir}/${share_dir_rel}/%}

all_files = ${step_files:${build_dir}/%=${all_dir}/%}
install_files = $(all_files:$(all_dir)/%=${prefix}/%)

m4_command = ${m4} -P \
	-D M_SHARE_DIR_REL=${share_dir_rel}

.SECONDARY:


.PHONY: default
default: all

.PHONY: help # print this help
help:
	@ echo You probably want one of these targets:
	@ $(SED) -e 's/^.PHONY: *\([^ #]*\) *\# *\(.*\)$$/  \1: \2/p;d' Makefile
	@ echo Installation directory is @prefix@

# =======================================================================================
# all

.PHONY: all # generate what can be generated
all: $(all_files)

${all_dir}/%: ${build_dir}/%
	@ ${MKDIR_P} ${dir $@}
	cp $< $@

#############################################################################
# build

${build_dir}/${share_dir_rel}/%: src/share/%
	@ ${MKDIR_P} ${dir $@}
	cp $< $@

${build_dir}/%: src/%
	@ ${MKDIR_P} ${dir $@}
	cp $< $@

${build_dir}/%: ${build_dir}/%.m4 Makefile
	${m4_command} $< > $@

# =============================================================================
# install

.PHONY: install # put files ${prefix} (defaults to @prefix@, set via configure)
install: $(install_files)

$(prefix)/bin/%: $(all_dir)/bin/%
	$(MKDIR_P) $(dir $@)
	$(INSTALL) -m 755 $< $@

$(prefix)/%: $(all_dir)/%
	$(MKDIR_P) $(dir $@)
	$(INSTALL) -m 644 $< $@

#############################################################################

.PHONY: uninstall # remove installed files
uninstall:
	$(RM) $(install_files)

.PHONY: clean # remove generated files & junk
clean:
	$(RM) $(wildcard *~)
	$(RM) -r tmp

.PHONY: distclean # remove products of configure
distclean: clean
	$(RM) Makefile stow.mk config.log config.status
	$(RM) -r autom4te.cache
